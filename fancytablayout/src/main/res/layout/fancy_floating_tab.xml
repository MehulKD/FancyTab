<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start|top"
    android:layout_marginLeft="@dimen/fancy_tab_paddin_start"
    android:layout_marginStart="@dimen/fancy_tab_paddin_start"
    android:layout_marginTop="?attr/actionBarSize"
    android:elevation="@dimen/tabs_elevation"
    android:padding="8dp"
    android:visibility="gone"
    tools:targetApi="lollipop">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tab_image_circle"
        android:layout_width="@dimen/fancy_selected_img_size"
        android:layout_height="@dimen/fancy_selected_img_size"
        android:contentDescription="@string/fancy_tab_image" />

    <ImageView
        android:id="@+id/tab_image"
        android:layout_width="@dimen/fancy_deselected_img_size"
        android:layout_height="@dimen/fancy_deselected_img_size"
        android:contentDescription="@string/fancy_tab_image" />
</RelativeLayout>